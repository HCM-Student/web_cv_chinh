<!-- ===================== FORM LIÊN HỆ ===================== -->
<section id="contact-form" class="section bg-light fade-in-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="contact-form-wrapper">
                    <div class="text-center mb-5">
                        <h2 class="section-title mb-3">Gửi tin nhắn cho chúng tôi</h2>
                        <p class="text-muted">Chúng tôi sẽ phản hồi trong vòng 24 giờ</p>
                    </div>
                    
                    <div class="contact-form">
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="fullName" class="form-label">Họ và tên *</label>
                                    <input type="text" class="form-control" id="fullName" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email *</label>
                                    <input type="email" class="form-control" id="email" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Số điện thoại</label>
                                    <input type="tel" class="form-control" id="phone">
                                </div>
                                <div class="col-md-6">
                                    <label for="company" class="form-label">Công ty/Tổ chức</label>
                                    <input type="text" class="form-control" id="company">
                                </div>
                                <div class="col-12">
                                    <label for="subject" class="form-label">Chủ đề *</label>
                                    <select class="form-select" id="subject" required>
                                        <option value="">Chọn chủ đề</option>
                                        <option value="quote">Yêu cầu báo giá</option>
                                        <option value="equipment">Thuê thiết bị</option>
                                        <option value="service">Dịch vụ khảo sát</option>
                                        <option value="job">Tuyển dụng</option>
                                        <option value="support">Hỗ trợ kỹ thuật</option>
                                        <option value="other">Khác</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label">Nội dung tin nhắn *</label>
                                    <textarea class="form-control" id="message" rows="5" required placeholder="Mô tả chi tiết yêu cầu của bạn..."></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="agree" required>
                                        <label class="form-check-label" for="agree">
                                            Tôi đồng ý với <a href="#" class="text-primary">chính sách bảo mật</a> và cho phép công ty liên hệ lại
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-paper-plane me-2"></i>Gửi tin nhắn
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

