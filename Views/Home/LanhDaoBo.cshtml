        flex-direction: column;
        gap: 1rem;
    }
    
    .contact-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .contact-actions .btn {
        width: 100%;
        max-width: 300px;
    }
    
    .leader-image {
        width: 120px !important;
        height: 120px !important;
    }
    
    .deputy-card .leader-image {
        width: 100px !important;
        height: 100px !important;
    }
}
