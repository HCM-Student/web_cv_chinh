        <defs>
          <linearGradient id="gR1" x1="0" y1="0" x2="1" y2="1">
            <stop offset="0%"  stop-color="#6ee7ff"/>
            <stop offset="100%" stop-color="#a78bfa"/>
          </linearGradient>
          <filter id="glowR" x="-50%" y="-50%" width="200%" height="200%">
