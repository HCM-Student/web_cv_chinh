      <div class="row g-3">
        @foreach (var p in list)
        {
          var coverUrl = string.IsNullOrWhiteSpace(p.AnhTieuDe)
              ? placeholder
              : Url.Content(p.AnhTieuDe);
          var alt = string.IsNullOrWhiteSpace(p.AnhTieuDeAlt) ? p.TieuDe : p.AnhTieuDeAlt;

          <div class="col-12 col-md-6 col-lg-4">
            <article class="card news-card h-100 border-0 shadow-sm">
              <a asp-controller="Home" asp-action="ChiTietBaiViet" asp-route-id="@p.Id"
                 class="ratio ratio-16x9 d-block position-relative">
                <img class="news-thumb w-100 h-100 object-fit-cover"
                     src="@coverUrl" alt="@alt" loading="lazy" />
                @{
                  var isNew = (DateTime.Now - p.NgayDang).TotalDays <= 7; // Bài viết mới trong 7 ngày
                }
                @if (isNew)
                {
                  <span class="new-tag">NEW</span>
                }
              </a>
              <div class="card-body d-flex flex-column">
                <h5 class="news-title clamp-2">
                  <a class="stretched-link text-decoration-none"
                     asp-controller="Home" asp-action="ChiTietBaiViet" asp-route-id="@p.Id">
                    @p.TieuDe
                  </a>
                </h5>
                @if (!string.IsNullOrWhiteSpace(p.TomTat))
                {
                  <p class="news-desc clamp-3">@p.TomTat</p>
                }
                <div class="news-meta small mt-auto">
                  <span class="chip">@p.NgayDang.ToString("dd/MM/yyyy")</span>
                  @if (!string.IsNullOrEmpty(p.ChuyenMuc?.Ten))
                  { <span class="chip">@p.ChuyenMuc.Ten</span> }
                </div>
              </div>
            </article>
          </div>
        }
      </div>
    }
  </div>
</section>



