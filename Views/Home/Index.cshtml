<script>
// Tính toán lại đường nối từ mỗi chấm tới tâm ảnh tròn bên trái
function updateServiceLines() {
  const imgWrap = document.querySelector('.interactive-image-container .service-image-wrapper');
  const items = document.querySelectorAll('.services-list .service-item');
  if (!imgWrap || !items.length) return;

  const imgRect = imgWrap.getBoundingClientRect();
  const centerX = imgRect.left + imgRect.width / 2;
  const centerY = imgRect.top + imgRect.height / 2;
  const radius = imgRect.width / 2;

  items.forEach(item => {
    const dot = item.querySelector('.service-dot');
    if (!dot) return;
    const dr = dot.getBoundingClientRect();
    const dotCX = dr.left + dr.width / 2;
    const dotCY = dr.top + dr.height / 2;
    const dx = centerX - dotCX;
    const dy = centerY - dotCY;
    const angle = Math.atan2(dy, dx) * 180 / Math.PI - 180; // 0deg là kéo ngang sang trái
    let len = Math.hypot(dx, dy) - radius + 6; // chạm mép hình tròn
    len = Math.max(80, Math.min(len, 700));
    dot.style.setProperty('--line-rot', angle.toFixed(2) + 'deg');
    dot.style.setProperty('--line-len', Math.round(len) + 'px');
  });
}

window.addEventListener('load', () => {
  updateServiceLines();
  window.addEventListener('resize', updateServiceLines);
  window.addEventListener('scroll', () => { window.requestAnimationFrame(updateServiceLines); }, { passive: true });
});
</script>

