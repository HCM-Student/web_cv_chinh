@{
    ViewData["Title"] = "Trang chủ";
}

<!-- ======= HERO (full-bleed, big text, animated waves) ======= -->
<section class="hero-wrap full-bleed">
    <div id="mainHero" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="6000">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mainHero" data-bs-slide-to="0" class="active" aria-current="true"></button>
            <button type="button" data-bs-target="#mainHero" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#mainHero" data-bs-slide-to="2"></button>
        </div>

        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="slide-bg" style="background-image:url('@Url.Content("~/img/hero/hero-1.jpg")')"></div>
                <div class="slide-overlay"></div>

                <div class="container position-relative z-1">
                    <div class="row align-items-center min-vh-75 py-5">
                        <div class="col-xl-9 col-lg-10 mx-auto text-center">
                            <div class="eyebrow mb-3">Bộ giải pháp chuyển đổi số đa ngành</div>

                            <h1 class="headline-xxl mb-2">
                                CUNG CẤP GIẢI PHÁP BẢN ĐỒ, CSDL,<br />
                                MÔ HÌNH 3D VÀ PHẦN MỀM ĐỊA KHÔNG GIAN
                            </h1>

                            <p class="subline-lg text-white-50 mb-4">
                                LiDAR • UAV • 3D Tour • IoT • AI cho Smart City & doanh nghiệp
                            </p>

                            <div class="d-flex gap-2 justify-content-center">
                                <a href="#services" class="btn btn-primary btn-lg btn-pill px-4">Khám phá dịch vụ</a>
                                <a href="#about" class="btn btn-outline-light btn-lg btn-pill px-4">Chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item">
                <div class="slide-bg" style="background-image:url('@Url.Content("~/img/hero/hero-2.jpg")')"></div>
                <div class="slide-overlay"></div>
                <div class="container position-relative z-1">
                    <div class="row align-items-center min-vh-75 py-5">
                        <div class="col-xl-9 col-lg-10 mx-auto text-center">
                            <div class="eyebrow mb-3">LiDAR · UAV · 3D Tour · IoT</div>
                            <h2 class="headline-xxl mb-2">MÔ HÌNH 3D CHÍNH XÁC & PHÂN TÍCH THỜI GIAN THỰC</h2>
                            <p class="subline-lg text-white-50 mb-4">Đám mây điểm, dựng 3D công trình/địa hình & dashboard ra quyết định.</p>
                            <a href="#projects" class="btn btn-light btn-lg btn-pill px-4">Dự án tiêu biểu</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <div class="slide-bg" style="background-image:url('@Url.Content("~/img/hero/hero-3.jpg")')"></div>
                <div class="slide-overlay"></div>
                <div class="container position-relative z-1">
                    <div class="row align-items-center min-vh-75 py-5">
                        <div class="col-xl-9 col-lg-10 mx-auto text-center">
                            <div class="eyebrow mb-3">Smart City Platform</div>
                            <h2 class="headline-xxl mb-2">QUẢN TRỊ CSDL ĐỊA KHÔNG GIAN TẬP TRUNG</h2>
                            <p class="subline-lg text-white-50 mb-4">Chuẩn hóa – tích hợp – phân quyền – vận hành ổn định, mở rộng linh hoạt.</p>
                            <a href="#contact" class="btn btn-primary btn-lg btn-pill px-4">Liên hệ tư vấn</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- arrows -->
        <button class="carousel-control-prev" type="button" data-bs-target="#mainHero" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Trước</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainHero" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Sau</span>
        </button>
    </div>

    <!-- WAVE ANIMATION -->
    <div class="waves-anim" aria-hidden="true">
        <svg class="wave w1" viewBox="0 0 1440 120" preserveAspectRatio="none">
            <path d="M0,96 C240,144 480,48 720,72 C960,96 1200,144 1440,96 L1440,120 L0,120 Z" fill="#ffffff"/>
        </svg>
        <svg class="wave w2" viewBox="0 0 1440 120" preserveAspectRatio="none">
            <path d="M0,104 C240,152 480,56 720,80 C960,104 1200,152 1440,104 L1440,120 L0,120 Z" fill="#ffffff" opacity=".65"/>
        </svg>
        <svg class="wave w3" viewBox="0 0 1440 120" preserveAspectRatio="none">
            <path d="M0,112 C240,160 480,64 720,88 C960,112 1200,160 1440,112 L1440,120 L0,120 Z" fill="#ffffff" opacity=".35"/>
        </svg>
    </div>
</section>

<!-- ===== GLASS FEATURE STRIP ===== -->
