</section>

<!-- ===================== PROJECTS ===================== -->
<section id="projects" class="section bg-light">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
                <span class="eyebrow mb-2">Case Studies</span>
                <h2 class="section-title mb-0">Dự án tiêu biểu</h2>
            </div>
            <a href="#" class="btn btn-outline-primary">Xem tất cả</a>
        </div>

        <div class="row g-3">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-12 col-lg-4">
                    <div class="project-card h-100">
                        <img class="w-100" src="https://images.unsplash.com/photo-1520607162513-77705c0f0d4a?q=80&w=1400&auto=format&fit=crop" alt="Project">
                        <div class="p-3">
                            <h6 class="mb-1">Triển khai GIS đô thị thông minh</h6>
                            <p class="text-muted mb-0">Kết nối IoT, CSDL địa không gian & dashboard ra quyết định.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- ===================== PARTNERS ===================== -->
<section class="section">
    <div class="container">
        <div class="text-center mb-3">
            <span class="eyebrow">Đối tác</span>
            <h2 class="section-title">Tin cậy & đồng hành</h2>
        </div>
        <div class="row row-cols-2 row-cols-md-4 row-cols-xl-6 g-3 align-items-center text-center">
            @{
                var logos = Enumerable.Repeat("https://dummyimage.com/160x60/ebeff6/7f8ea3&text=Logo", 12).ToArray();
            }
            @for (int i = 0; i < logos.Length; i++)
            {
                <div class="col">
                    <img class="partner-logo img-fluid" src="@logos[i]" alt="Đối tác @i">
                </div>
            }
        </div>
    </div>
</section>

