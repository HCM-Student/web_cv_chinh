        radial-gradient(820px 520px at 38% 68%, rgba(110,231,255,.10), transparent 45%),
        #0f1620;"></div>
  <div class="slide-overlay"></div>

  <div class="wheel-split d-none d-md-grid">
    <!-- ================== BÁNH TRÁI: 16 mục NGẮN ================== -->
    <div class="wu-core wheel-left">
      <div class="wu-aurora"></div>

      <svg class="wheel-ultra" viewBox="0 0 400 400" aria-hidden="true">
        <defs>
          <linearGradient id="gL1" x1="0" y1="0" x2="1" y2="1">
            <stop offset="0%"  stop-color="#6ee7ff"/>
            <stop offset="100%" stop-color="#a78bfa"/>
          </linearGradient>
          <filter id="glowL" x="-50%" y="-50%" width="200%" height="200%">
            <feGaussianBlur stdDeviation="2.2" result="b"/>
            <feMerge><feMergeNode in="b"/><feMergeNode in="SourceGraphic"/></feMerge>
          </filter>
          <circle id="ringL" cx="200" cy="200" r="170"></circle>
        </defs>

        <!-- Track -->
        <use href="#ringL" fill="none" stroke="rgba(255,255,255,.07)" stroke-width="26"></use>
        <!-- Shimmer nhẹ, chuyên nghiệp -->
        <use href="#ringL" class="ring-sheen" fill="none" stroke="url(#gL1)"
             stroke-width="26" stroke-linecap="round" stroke-dasharray="110 990"
             filter="url(#glowL)"></use>

        <text class="ring-title" text-anchor="middle" dominant-baseline="middle">
          <textPath href="#ringL" startOffset="50%">NÔNG NGHIỆP &amp; PHÁT TRIỂN NÔNG THÔN</textPath>
        </text>
      </svg>

      <img class="wu-logo" src="~/img/logo.png" alt="Logo">
      <span class="wu-pulse"></span>

      <div class="wu-twinkles">
        <i style="--x:78%; --y:22%; --d:3.8s"></i><i style="--x:20%; --y:30%; --d:4.6s"></i>
        <i style="--x:86%; --y:58%; --d:5.4s"></i><i style="--x:14%; --y:66%; --d:3.2s"></i>
        <i style="--x:50%; --y:12%; --d:6.2s"></i><i style="--x:36%; --y:84%; --d:4.0s"></i>
      </div>

      <!-- Chip NGẮN (16) -->
