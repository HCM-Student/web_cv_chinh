                                            }
                                        </div>
                                        <div class="related-content">
                                            <h6><a href="@Url.Action("ChiTietBaiViet", "Home", new { id = relatedPost.Id })">@relatedPost.TieuDe</a></h6>
                                            <small class="text-muted">@relatedPost.NgayDang.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    
                    <!-- Bài viết mới nhất -->
