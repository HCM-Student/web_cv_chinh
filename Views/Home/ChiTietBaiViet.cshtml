@using WEB_CV.Models
@model BaiViet
@{
    ViewData["Title"] = Model.TieuDe;
}

<!-- ===================== BÀI VIẾT HERO ===================== -->
<section class="article-hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("TinTuc", "Home")">Tin tức</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.TieuDe</li>
                    </ol>
                </nav>
                
                <div class="article-header">
                    <div class="article-meta mb-3">
                        <span class="category badge bg-primary">@Model.ChuyenMuc?.Ten</span>
                        <span class="date">
                            <i class="fas fa-calendar me-1"></i>
                            @Model.NgayDang.ToString("dd/MM/yyyy")
                        </span>
                        <span class="author">
                            <i class="fas fa-user me-1"></i>
                            @(Model.TacGia?.HoTen ?? "Admin")
                        </span>
                    </div>
                    
                    <h1 class="article-title">@Model.TieuDe</h1>
                    
                    @if (!string.IsNullOrEmpty(Model.TomTat))
                    {
                        <p class="article-lead">@Model.TomTat</p>
                    }
                    
                    <div class="article-actions">
                        <div class="social-share">
                            <span class="share-label">Chia sẻ:</span>
                            <a href="#" class="share-btn facebook" title="Chia sẻ lên Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="share-btn twitter" title="Chia sẻ lên Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="share-btn linkedin" title="Chia sẻ lên LinkedIn">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a href="#" class="share-btn copy" title="Sao chép link">
                                <i class="fas fa-link"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ===================== NỘI DUNG BÀI VIẾT ===================== -->
<section class="article-content section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <article class="main-article">
                    <div class="article-image mb-4">
                        <img src="~/img/hero/hero-1.jpg" alt="@Model.TieuDe" class="img-fluid rounded">
                        <div class="image-caption text-muted small mt-2">@Model.TieuDe</div>
                    </div>
                    
                    <div class="article-body">
                        @Html.Raw(Model.NoiDung)
                    </div>
                    
                    @if (Model.BaiVietTags?.Any() == true)
                    {
                        <div class="article-tags mt-4">
                            <h6>Tags:</h6>
                            <div class="tags-list">
                                @foreach (var baiVietTag in Model.BaiVietTags)
                                {
                                    <span class="tag">#@baiVietTag.Tag?.Ten</span>
                                }
                            </div>
                        </div>
                    }
                    
                    <div class="article-footer mt-5">
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="article-info">
                                    <small class="text-muted">
                                        Đăng lúc: @Model.NgayDang.ToString("HH:mm dd/MM/yyyy")
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <a href="@Url.Action("TinTuc", "Home")" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại tin tức
                                </a>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
            
            <!-- ===================== SIDEBAR ===================== -->
            <div class="col-lg-4">
                <aside class="article-sidebar">
                    <!-- Bài viết liên quan -->
                    <div class="sidebar-widget">
                        <h5 class="widget-title">Bài viết liên quan</h5>
                        <div class="related-posts">
                            <!-- Placeholder cho bài viết liên quan -->
                            <div class="related-post">
                                <div class="related-image">
                                    <img src="~/img/hero/hero-2.jpg" alt="Bài viết liên quan" class="img-fluid">
                                </div>
                                <div class="related-content">
                                    <h6><a href="#">Công nghệ LiDAR trong khảo sát địa hình</a></h6>
                                    <small class="text-muted">15/08/2024</small>
                                </div>
                            </div>
                            
                            <div class="related-post">
                                <div class="related-image">
                                    <img src="~/img/hero/hero-3.jpg" alt="Bài viết liên quan" class="img-fluid">
                                </div>
                                <div class="related-content">
                                    <h6><a href="#">Ứng dụng AI trong phân tích dữ liệu không gian</a></h6>
                                    <small class="text-muted">12/08/2024</small>
                                </div>
                            </div>
                            
                            <div class="related-post">
                                <div class="related-image">
                                    <img src="~/img/about/smart-city.png" alt="Bài viết liên quan" class="img-fluid">
                                </div>
                                <div class="related-content">
                                    <h6><a href="#">Tương lai của thành phố thông minh</a></h6>
                                    <small class="text-muted">10/08/2024</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Newsletter -->
                    <div class="sidebar-widget">
                        <h5 class="widget-title">Nhận tin tức</h5>
                        <div class="newsletter-sidebar">
                            <p class="small text-muted">Đăng ký để nhận những tin tức mới nhất về công nghệ GIS</p>
                            <form>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Email của bạn">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Đăng ký</button>
                            </form>
                        </div>
                    </div>
                    
                    <!-- Liên hệ -->
                    <div class="sidebar-widget">
                        <h5 class="widget-title">Liên hệ tư vấn</h5>
                        <div class="contact-sidebar">
                            <p class="small text-muted">Cần tư vấn về dịch vụ? Liên hệ ngay với chúng tôi!</p>
                            <div class="contact-info">
                                <div class="contact-item">
                                    <i class="fas fa-phone text-primary me-2"></i>
                                    <span>0378695597</span>
                                </div>
                                <div class="contact-item">
                                    <i class="fas fa-envelope text-primary me-2"></i>
                                    <span>luanha2003@gmail.com</span>
                                </div>
                            </div>
                            <a href="@Url.Action("LienHe", "Home")" class="btn btn-outline-primary w-100 mt-3">
                                Liên hệ ngay
                            </a>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</section>

<!-- ===================== BÀI VIẾT KHÁC ===================== -->
<section class="section bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h3>Bài viết khác</h3>
            <p class="text-muted">Khám phá thêm những tin tức và sự kiện mới nhất</p>
        </div>
        
        <div class="row g-4">
            <!-- Placeholder cho bài viết khác -->
            <div class="col-lg-4 col-md-6">
                <div class="news-card">
                    <div class="news-image">
                        <img src="~/img/about/gis-network.png" alt="Bài viết khác" class="img-fluid">
                        <div class="news-category">Công nghệ</div>
                    </div>
                    <div class="news-content">
                        <div class="news-meta">
                            <span class="news-date">
                                <i class="fas fa-calendar me-1"></i>20/08/2024
                            </span>
                        </div>
                        <h5 class="news-title">
                            <a href="#">Xu hướng công nghệ GIS 2024</a>
                        </h5>
                        <p class="news-excerpt">Tìm hiểu những xu hướng mới nhất trong lĩnh vực công nghệ thông tin địa lý...</p>
                        <a href="#" class="read-more">Đọc thêm <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="news-card">
                    <div class="news-image">
                        <img src="~/img/about/datacenter.png" alt="Bài viết khác" class="img-fluid">
                        <div class="news-category">Sự kiện</div>
                    </div>
                    <div class="news-content">
                        <div class="news-meta">
                            <span class="news-date">
                                <i class="fas fa-calendar me-1"></i>18/08/2024
                            </span>
                        </div>
                        <h5 class="news-title">
                            <a href="#">Hội thảo công nghệ không gian 2024</a>
                        </h5>
                        <p class="news-excerpt">Tham gia hội thảo lớn nhất năm về công nghệ không gian và ứng dụng thực tế...</p>
                        <a href="#" class="read-more">Đọc thêm <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-4 col-md-6">
                <div class="news-card">
                    <div class="news-image">
                        <img src="~/img/about/smart-city.png" alt="Bài viết khác" class="img-fluid">
                        <div class="news-category">Tin tức</div>
                    </div>
                    <div class="news-content">
                        <div class="news-meta">
                            <span class="news-date">
                                <i class="fas fa-calendar me-1"></i>15/08/2024
                            </span>
                        </div>
                        <h5 class="news-title">
                            <a href="#">Dự án thành phố thông minh tại Việt Nam</a>
                        </h5>
                        <p class="news-excerpt">Cập nhật tiến độ các dự án thành phố thông minh đang triển khai tại Việt Nam...</p>
                        <a href="#" class="read-more">Đọc thêm <i class="fas fa-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="text-center mt-5">
            <a href="@Url.Action("TinTuc", "Home")" class="btn btn-primary btn-lg">
                Xem tất cả tin tức
            </a>
        </div>
    </div>
</section>
