@model WEB_CV.Controllers.ChangePasswordVM
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="change-password-page">
    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">
                        <i class="fas fa-key me-3"></i>
                        Đổi mật khẩu
                    </h1>
                    <p class="page-subtitle">Cập nhật mật khẩu tài khoản của bạn</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="change-password-card">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-section">
                            <h4 class="section-title">
                                <i class="fas fa-lock me-2"></i>Thông tin mật khẩu
                            </h4>
                            
                            <div class="form-group">
                                <label asp-for="MatKhauCu" class="form-label">Mật khẩu hiện tại *</label>
                                <input asp-for="MatKhauCu" class="form-control" placeholder="Nhập mật khẩu hiện tại" />
                                <span asp-validation-for="MatKhauCu" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="MatKhauMoi" class="form-label">Mật khẩu mới *</label>
                                <input asp-for="MatKhauMoi" class="form-control" placeholder="Nhập mật khẩu mới" />
                                <span asp-validation-for="MatKhauMoi" class="text-danger"></span>
                                <small class="form-text text-muted">Mật khẩu phải có ít nhất 6 ký tự.</small>
                            </div>

                            <div class="form-group">
                                <label asp-for="XacNhanMatKhau" class="form-label">Xác nhận mật khẩu mới *</label>
                                <input asp-for="XacNhanMatKhau" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                                <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="password-tips">
                            <h5 class="tips-title">
                                <i class="fas fa-lightbulb me-2"></i>Mẹo tạo mật khẩu mạnh
                            </h5>
                            <ul class="tips-list">
                                <li>Sử dụng ít nhất 8 ký tự</li>
                                <li>Kết hợp chữ hoa, chữ thường và số</li>
                                <li>Thêm ký tự đặc biệt như @@, #, $, %</li>
                                <li>Tránh sử dụng thông tin cá nhân</li>
                                <li>Không sử dụng mật khẩu đã dùng trước đó</li>
                            </ul>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Đổi mật khẩu
                            </button>
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.change-password-page {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 2rem 0;
}

.page-header {
    margin-bottom: 3rem;
    color: white;
}

.page-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.page-subtitle {
    font-size: 1.2rem;
    margin: 0.5rem 0 0 0;
    opacity: 0.9;
}

.change-password-card {
    background: white;
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 20px 60px rgba(0,0,0,0.1);
}

.form-section {
    margin-bottom: 2rem;
}

.section-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0 0 1.5rem 0;
    display: flex;
    align-items: center;
    padding-bottom: 1rem;
    border-bottom: 2px solid rgba(102, 126, 234, 0.1);
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.5rem;
    display: block;
}

.form-control {
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}

.form-text {
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.password-tips {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
}

.tips-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2c3e50;
    margin: 0 0 1rem 0;
    display: flex;
    align-items: center;
}

.tips-list {
    margin: 0;
    padding-left: 1.5rem;
    color: #6c757d;
}

.tips-list li {
    margin-bottom: 0.5rem;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
}

.btn {
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
    padding: 0.75rem 2rem;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.alert {
    border-radius: 12px;
    border: none;
    margin-bottom: 2rem;
}

/* Responsive */
@@media (max-width: 768px) {
    .change-password-page {
        padding: 1rem 0;
    }
    
    .page-title {
        font-size: 2rem;
    }
    
    .change-password-card {
        padding: 1.5rem;
    }
    
    .form-actions {
        flex-direction: column;
    }
    
    .btn {
        width: 100%;
    }
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
