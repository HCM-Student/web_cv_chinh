@model IEnumerable<WEB_CV.Models.Conversation>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Tin nhắn";
}

<div class="container py-4">
    <h2 class="mb-4">Hộp thoại</h2>
    <div class="list-group">
        @foreach (var c in Model)
        {
            <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" asp-controller="Messages" asp-action="Chat" asp-route-with="@c.UserBId">
                <span>
                    <i class="fas fa-user me-2"></i>Người dùng #@c.UserBId
                    <small class="text-muted ms-2">@c.LastMessageAtUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</small>
                </span>
                @if (c.UnreadForUserA > 0)
                {
                    <span class="badge bg-danger">@c.UnreadForUserA</span>
                }
            </a>
        }
    </div>
</div>


