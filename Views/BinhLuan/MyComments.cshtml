@model IEnumerable<WEB_CV.Models.BinhLuan>

@{
    ViewData["Title"] = "Bình luận của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-comments"></i> Bình luận của tôi</h2>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Về trang chủ
                </a>
            </div>

            @if (TempData["CommentSuccess"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["CommentSuccess"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["CommentError"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["CommentError"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-comment-slash fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Bạn chưa có bình luận nào</h4>
                    <p class="text-muted">Hãy tham gia thảo luận trên các bài viết!</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var comment in Model)
                    {
                        <div class="col-12 mb-4">
                            <div class="comment-card @(comment.TrangThai == 1 ? "approved" : comment.TrangThai == 2 ? "rejected" : "pending")">
                                <div class="comment-card-header">
                                    <div class="article-info">
                                        <div class="article-icon">
                                            <i class="fas fa-newspaper"></i>
                                        </div>
                                        <div class="article-details">
                                            <h6 class="article-title">
                                                <a href="@Url.Action("ChiTietBaiViet", "Home", new { id = comment.BaiVietId })" 
                                                   class="text-decoration-none">
                                                    @comment.BaiViet.TieuDe
                                                </a>
                                            </h6>
                                            <div class="comment-meta">
                                                <span class="comment-date">
                                                    <i class="fas fa-calendar"></i> 
                                                    @comment.Ngay.ToString("dd/MM/yyyy HH:mm")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="status-badge">
                                        @switch (comment.TrangThai)
                                        {
                                            case 0:
                                                <span class="badge status-pending">
                                                    <i class="fas fa-clock"></i> Chờ duyệt
                                                </span>
                                                break;
                                            case 1:
                                                <span class="badge status-approved">
                                                    <i class="fas fa-check"></i> Đã duyệt
                                                </span>
                                                break;
                                            case 2:
                                                <span class="badge status-rejected">
                                                    <i class="fas fa-times"></i> Từ chối
                                                </span>
                                                break;
                                        }
                                    </div>
                                </div>
                                
                                <div class="comment-card-body">
                                    <div class="comment-content">
                                        <p class="comment-text">@comment.NoiDung</p>
                                    </div>
                                </div>
                                
                                <div class="comment-card-footer">
                                    <div class="comment-actions">
                                        <a href="@Url.Action("Edit", "BinhLuan", new { id = comment.Id })" 
                                           class="btn btn-edit">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <button type="button" class="btn btn-delete" 
                                                onclick="confirmDelete(@comment.Id)">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </div>
                                    
                                    @if (comment.TrangThai == 0)
                                    {
                                        <div class="pending-notice">
                                            <i class="fas fa-info-circle"></i>
                                            Bình luận đang chờ admin duyệt
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa bình luận này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
/* ===== COMMENT CARDS ===== */
.comment-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    border: 1px solid #f1f3f4;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    position: relative;
}

.comment-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    transition: width 0.3s ease;
}

.comment-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.12);
}

.comment-card:hover::before {
    width: 6px;
}

.comment-card.approved::before {
    background: linear-gradient(135deg, #28a745, #20c997);
}

.comment-card.pending::before {
    background: linear-gradient(135deg, #ffc107, #fd7e14);
}

.comment-card.rejected::before {
    background: linear-gradient(135deg, #dc3545, #e74c3c);
}

.comment-card-header {
    padding: 1.5rem;
    background: linear-gradient(135deg, #f8f9fa, #ffffff);
    border-bottom: 1px solid #e9ecef;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
}

.article-info {
    display: flex;
    gap: 1rem;
    flex: 1;
    min-width: 0;
}

.article-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.2rem;
    flex-shrink: 0;
    box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
}

.article-details {
    flex: 1;
    min-width: 0;
}

.article-title {
    margin: 0 0 0.5rem 0;
    font-weight: 700;
    font-size: 1.1rem;
    line-height: 1.3;
}

.article-title a {
    color: #2c3e50;
    text-decoration: none;
    transition: color 0.3s ease;
}

.article-title a:hover {
    color: #4f46e5;
}

.comment-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.comment-date {
    color: #6c757d;
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.status-badge {
    flex-shrink: 0;
}

.badge {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.8rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.status-approved {
    background: linear-gradient(135deg, #d4edda, #c3e6cb);
    color: #155724;
    border: 1px solid #c3e6cb;
}

.status-pending {
    background: linear-gradient(135deg, #fff3cd, #ffeaa7);
    color: #856404;
    border: 1px solid #ffeaa7;
}

.status-rejected {
    background: linear-gradient(135deg, #f8d7da, #f5c6cb);
    color: #721c24;
    border: 1px solid #f5c6cb;
}

.comment-card-body {
    padding: 1.5rem;
}

.comment-content {
    background: #f8f9fa;
    padding: 1.25rem;
    border-radius: 12px;
    border-left: 4px solid #e9ecef;
}

.comment-text {
    margin: 0;
    color: #495057;
    line-height: 1.7;
    font-size: 1rem;
    white-space: pre-wrap;
}

.comment-card-footer {
    padding: 1.5rem;
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.comment-actions {
    display: flex;
    gap: 0.75rem;
}

.btn {
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 0.9rem;
}

.btn-edit {
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    color: white;
    box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
}

.btn-edit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
    color: white;
}

.btn-delete {
    background: linear-gradient(135deg, #dc3545, #e74c3c);
    color: white;
    box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
}

.btn-delete:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(220, 53, 69, 0.4);
    color: white;
}

.pending-notice {
    background: rgba(255, 193, 7, 0.1);
    color: #856404;
    padding: 0.75rem 1rem;
    border-radius: 10px;
    border: 1px solid rgba(255, 193, 7, 0.2);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 500;
}

/* ===== RESPONSIVE ===== */
@@media (max-width: 768px) {
    .comment-card-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .article-info {
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .article-icon {
        align-self: flex-start;
    }
    
    .comment-card-footer {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .comment-actions {
        width: 100%;
        justify-content: flex-start;
    }
    
    .btn {
        flex: 1;
        justify-content: center;
    }
}

@@media (max-width: 480px) {
    .comment-card-header,
    .comment-card-body,
    .comment-card-footer {
        padding: 1rem;
    }
    
    .article-icon {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }
    
    .btn {
        padding: 0.625rem 1.25rem;
        font-size: 0.85rem;
    }
}
</style>

@section Scripts {
    <script>
        function confirmDelete(commentId) {
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "BinhLuan")/' + commentId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
