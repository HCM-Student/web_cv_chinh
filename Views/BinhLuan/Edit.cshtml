@model WEB_CV.Models.BinhLuan

@{
    ViewData["Title"] = "Sửa bình luận";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-edit"></i> Sửa bình luận</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Bài viết:</label>
                        <p class="form-control-plaintext">
                            <a href="@Url.Action("ChiTietBaiViet", "Home", new { id = Model.BaiVietId })" 
                               class="text-decoration-none">
                                @Model.BaiViet.TieuDe
                            </a>
                        </p>
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="BaiVietId" />
                        <input type="hidden" asp-for="NguoiDungId" />
                        <input type="hidden" asp-for="HoTen" />
                        <input type="hidden" asp-for="Email" />
                        <input type="hidden" asp-for="Ngay" />

                        <div class="mb-3">
                            <label asp-for="NoiDung" class="form-label">Nội dung bình luận:</label>
                            <textarea asp-for="NoiDung" class="form-control" rows="5" 
                                      placeholder="Nhập nội dung bình luận..."></textarea>
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Lưu ý:</strong> Sau khi sửa, bình luận sẽ được đặt lại trạng thái "Chờ duyệt" và cần được admin phê duyệt lại.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("MyComments")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
