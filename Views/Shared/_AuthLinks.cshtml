@using System.Security.Claims

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <li class="nav-item">
        <span class="nav-link">Xin chào, @User.Identity!.Name</span>
    </li>
    @if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Quản trị</a>
        </li>
    }
    <li class="nav-item">
        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button class="btn btn-link nav-link" type="submit">Đăng xuất</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a>
    </li>
}
