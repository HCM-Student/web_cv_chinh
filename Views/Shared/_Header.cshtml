                <li><a class="dropdown-item" asp-controller="Chat" asp-action="Index">
                  <i class="bi bi-chat-dots me-2"></i>Chat nội bộ
                </a></li>
                <li><a class="dropdown-item" asp-controller="LichCongTac" asp-action="Index">
                  <i class="bi bi-calendar3-week me-2"></i>Lịch công tác
                </a></li>
              }
              
              @if (User.IsInRole("Admin"))
              {
                <li><hr class="dropdown-divider" /></li>
                <li class="px-3 pt-1 pb-1 text-muted small">Quản trị</li>
                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                  <i class="fas fa-tachometer-alt me-2"></i>Bảng điều khiển
                </a></li>
                <li><a class="dropdown-item" asp-area="Admin" asp-controller="BaiViet" asp-action="Index">
                  <i class="fas fa-newspaper me-2"></i>Bài viết
                </a></li>
                <li><a class="dropdown-item" asp-area="Admin" asp-controller="NguoiDung" asp-action="Index">
                  <i class="fas fa-users me-2"></i>Người dùng
                </a></li>
                <li><a class="dropdown-item" asp-area="Admin" asp-controller="BinhLuan" asp-action="Index">
                  <i class="fas fa-comments me-2"></i>Quản lý bình luận
                </a></li>
                <li><a class="dropdown-item" asp-area="Admin" asp-controller="LichCongTac" asp-action="Index">
                  <i class="bi bi-calendar3-week me-2"></i>Quản lý lịch công tác
                </a></li>
              }
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item" href="javascript:void(0)" onclick="document.getElementById('logout-form').submit();">
                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
              </a></li>
            </ul>
          </div>
        }
         else
         {
           <!-- AUTH BUTTONS (MINIMAL) -->
           <div class="auth-compact">
             <a class="auth-btn login" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
             <a class="auth-btn register" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
           </div>
         }


        <!-- LANGUAGE cuối cùng (desktop) -->
        <div class="dropdown d-none d-lg-block">
          <button class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown">
            <i class="fa-solid fa-globe me-1"></i>
            @System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper()
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item"
                   asp-controller="Language" asp-action="SetLanguage"
                   asp-route-culture="vi-VN" asp-route-returnUrl="@back">Tiếng Việt</a></li>
            <li><a class="dropdown-item"
                   asp-controller="Language" asp-action="SetLanguage"
                   asp-route-culture="en-US" asp-route-returnUrl="@back">English</a></li>
          </ul>
        </div>


      </div>
    </div>
  </div>
</nav>

<script>
// Chỉ hiện logo nhỏ khi nav đã dính lên đỉnh (scroll qua brandbar)
document.addEventListener('DOMContentLoaded', function () {
  const nav = document.querySelector('.navstrip');
  const brandbar = document.querySelector('.brandbar');
  if (!nav) return;
  let threshold = (brandbar?.offsetHeight || 0);

  const update = () => {
    threshold = (brandbar?.offsetHeight || 0);
    if (window.scrollY > threshold) nav.classList.add('is-stuck');
    else nav.classList.remove('is-stuck');
  };
  update();
  window.addEventListener('scroll', update, { passive: true });
  window.addEventListener('resize', update);
});
</script>

<!-- FORM ẨN LOGOUT -->
<form id="logout-form" method="post" asp-area="" asp-controller="Account" asp-action="Logout" class="d-none">
  @Html.AntiForgeryToken()
</form>
