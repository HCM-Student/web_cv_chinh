<script>
// Ch·ªâ hi·ªán logo nh·ªè khi nav ƒë√£ d√≠nh l√™n ƒë·ªânh (scroll qua brandbar)
document.addEventListener('DOMContentLoaded', function () {
  const nav = document.querySelector('.navstrip');
  const brandbar = document.querySelector('.brandbar');
  if (!nav) return;
  let threshold = (brandbar?.offsetHeight || 0);

  const update = () => {
    threshold = (brandbar?.offsetHeight || 0);
    if (window.scrollY > threshold) nav.classList.add('is-stuck');
    else nav.classList.remove('is-stuck');
  };
  update();
  window.addEventListener('scroll', update, { passive: true });
  window.addEventListener('resize', update);
});
</script>

