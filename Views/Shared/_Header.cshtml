@* Views/Shared/_Header.cshtml *@
@{
    var currentController = (string?)ViewContext.RouteData.Values["controller"] ?? "";
    var currentAction = (string?)ViewContext.RouteData.Values["action"] ?? "";
}

<!-- HÀNG TRÊN: LOGO + TÊN + LIÊN HỆ -->
<div class="brandbar">
    <div class="container d-flex align-items-center justify-content-between py-2">
        <!-- LEFT: LOGO + TÊN -->
        <a class="d-flex align-items-center gap-3 text-decoration-none brand-link"
           asp-area=""
           asp-controller="Home"
           asp-action="Index">
            <img src="~/img/logo.png" asp-append-version="true" alt="Logo" class="brand-logo" />
            <div class="brand-text d-none d-md-block">
                <div class="brand-title">TTDL PHÍA NAM</div>
                <div class="brand-sub">CỤC CHUYỂN ĐỔI SỐ</div>
                <div class="brand-slogan">SÁNG TẠO CHO CUỘC SỐNG TỐT ĐẸP</div>
            </div>
        </a>

        <!-- RIGHT: CONTACT INFO -->
    <div class="d-none d-lg-flex align-items-center gap-4 contact-right">
  <div class="contact-item-header">
    <i class="bi bi-telephone-fill contact-icon" aria-hidden="true"></i>
    <span class="contact-text">0378 695 597</span>
  </div>

  <div class="contact-item-header">
    <i class="bi bi-envelope-fill contact-icon" aria-hidden="true"></i>
    <a href="mailto:luanha2003@gmail.com" class="contact-text contact-link">luanha2003@gmail.com</a>
  </div>
</div>



    </div>
</div>

<!-- HÀNG DƯỚI: MENU (GIỮA) + AUTH (BÊN PHẢI) -->
<nav class="navbar navbar-expand-lg navbar-light navstrip">
    <div class="container">
        <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse w-100" id="mainNav">
            <!-- MENU Ở GIỮA (GIÃN THƯA) -->
            <ul class="navbar-nav mx-auto nav-center mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(currentController=="Home" && currentAction=="Index" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                </li>

                <!-- CHUYỂN TRANG GIỚI THIỆU -->
                <li class="nav-item">
                    <a class="nav-link @(currentController=="Home" && currentAction=="GioiThieu" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="GioiThieu">Giới thiệu</a>
                </li>



                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="serviceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Dịch vụ</a>
                    <ul class="dropdown-menu" aria-labelledby="serviceDropdown">
                        <li><a class="dropdown-item" href="#">Giải pháp chuyển đổi số bản đồ nền 3D phục vụ thành phố thông minh</a></li>
                        <li><a class="dropdown-item" href="#">Giải pháp công nghệ quét Lidar và mô hình hóa 3D</a></li>
                        <li><a class="dropdown-item" href="#">Giải pháp công nghệ chuyển đổi số du lịch</a></li>
                        <li><a class="dropdown-item" href="#">Giải pháp khảo sát công trình sử dụng công nghệ bay chụp ảnh và Lidar UAV</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Dịch vụ khác</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="svcDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Chuyên môn</a>
                    <ul class="dropdown-menu" aria-labelledby="svcDropdown">
                        <li><a class="dropdown-item" href="@($"{Url.Action("Index","Home")}#services")">LiDAR &amp; 3D</a></li>
                        <li><a class="dropdown-item" href="@($"{Url.Action("Index","Home")}#services")">GIS</a></li>
                        <li><a class="dropdown-item" href="@($"{Url.Action("Index","Home")}#services")">Khảo sát</a></li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(currentController=="Home" && currentAction=="ThietBi" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="ThietBi">Thiết bị</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController=="Home" && currentAction=="TinTuc" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="TinTuc">Tin tức – Sự kiện</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController=="Home" && currentAction=="TuyenDung" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="TuyenDung">Tuyển dụng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController=="Home" && currentAction=="BaoGia" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="BaoGia">Báo giá</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController=="Home" && currentAction=="LienHe" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="LienHe">Liên hệ</a>
                </li>
            </ul>

            <!-- AUTH BÊN PHẢI -->
            <div class="ms-lg-auto d-flex align-items-center gap-2 header-auth">
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="dropdown">
                        <a class="btn btn-light rounded-pill px-3 dropdown-toggle d-flex align-items-center gap-2 avatar-chip"
                           href="#" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/img/avatar.jpg" asp-append-version="true" alt="avatar" class="avatar-img" />
                            <span class="fw-semibold d-none d-sm-inline">@User.Identity!.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userMenu">
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Tài khoản</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><hr class="dropdown-divider" /></li>
                                <li class="px-3 pt-1 pb-1 text-muted small">Quản trị</li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Bảng điều khiển</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="BaiViet" asp-action="Index">Bài viết</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="NguoiDung" asp-action="Index">Người dùng</a></li>
                            }
                            <li><hr class="dropdown-divider" /></li>
                            <li><a class="dropdown-item" href="javascript:void(0)" onclick="document.getElementById('logout-form').submit();">Đăng xuất</a></li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-outline-primary btn-sm rounded-pill px-3" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                    <a class="btn btn-primary btn-sm rounded-pill px-3" asp-area="" asp-controller="Account" asp-action="Register">Đăng ký</a>
                }
            </div>
        </div>
    </div>
</nav>

<!-- FORM ẨN LOGOUT -->
<form id="logout-form" method="post" asp-controller="Account" asp-action="Logout" class="d-none">
    @Html.AntiForgeryToken()
</form>
