      <img src="~/img/logo.png" asp-append-version="true" alt="Logo" class="brand-logo" />
      <div class="brand-text d-none d-md-block">
        <div class="brand-title">TTDL PHÍA NAM</div>
        <div class="brand-sub">CỤC CHUYỂN ĐỔI SỐ</div>
        <div class="brand-slogan">SÁNG TẠO CHO CUỘC SỐNG TỐT ĐẸP</div>
      </div>
    </a>

    <!-- RIGHT: CONTACT INFO -->
    <div class="d-none d-lg-flex align-items-center contact-right">
      <!-- Phone -->
      <a class="contact-chip" href="tel:0378695597" aria-label="Gọi 0378 695 597">
        <img src="~/media/phone-icon.png" class="contact-icon" alt="Hotline">
        <span class="contact-text">0378 695 597</span>
      </a>

      <span class="contact-sep" aria-hidden="true"></span>

      <!-- Email -->
      <a class="contact-chip" href="mailto:luanha2003@gmail.com">
        <img src="~/media/mail-icon.png" class="contact-icon" alt="Email">
