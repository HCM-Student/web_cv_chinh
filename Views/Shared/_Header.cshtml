@* Views/Shared/_Header.cshtml *@
@{
    var currentController = (string?)ViewContext.RouteData.Values["controller"] ?? "";
    var currentAction = (string?)ViewContext.RouteData.Values["action"] ?? "";
}

<!-- HEADER TOP: Logo + contact -->
<div class="header-top">
    <div class="container py-2">
        <div class="d-flex align-items-center justify-content-between">
            <!-- Brand -->
            <a class="brand d-flex align-items-center text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" alt="web_cv" class="brand-logo me-2" />
                @* Nếu logo đã có chữ thì có thể bỏ span bên dưới *@
                <span class="fw-semibold text-dark d-none d-md-inline">web_cv</span>
            </a>

            <!-- Contacts -->
            <div class="d-none d-md-flex align-items-center gap-4">
                <div class="contact-chip">
                    <svg width="18" height="18" viewBox="0 0 16 16" fill="currentColor" class="me-1">
                        <path d="M3 2a1 1 0 0 0-1 1v.278c0 .31.146.602.395.79l2.528 1.895c.35.262.45.744.232 1.129L4.39 9.12a11.19 11.19 0 0 0 4.49 4.49l1.83-1.765c.385-.218.867-.118 1.129.232l1.895 2.528c.188.249.48.395.79.395H15a1 1 0 0 0 1-1v-1a2 2 0 0 0-2-2h-.5A12.5 12.5 0 0 1 3 3.5V3a1 1 0 0 0-1-1Z"/>
                    </svg>
                    <a class="link-primary fw-600" href="tel:0963612168">0963 612 168</a>
                </div>

                <div class="vr d-none d-lg-inline-block"></div>

                <div class="contact-chip">
                    <svg width="18" height="18" viewBox="0 0 16 16" fill="currentColor" class="me-1">
                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v.217L8 8.5 0 4.217V4Zm0 1.383V12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V5.383l-7.555 4.53a1 1 0 0 1-1.01 0L0 5.383Z"/>
                    </svg>
                    <a class="link-primary fw-600" href="mailto:contact@example.com">contact@example.com</a>
                </div>
            </div>
        </div>
    </div>
</div>

