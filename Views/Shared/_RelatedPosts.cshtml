@model IEnumerable<WEB_CV.Models.BaiViet>

@if (Model.Any())
{
    <div class="related-posts-section">
        <h5 class="related-title">
            <i class="fas fa-newspaper me-2"></i>
            Bài viết liên quan
        </h5>
        
        <div class="related-posts-grid">
            @foreach (var post in Model.Take(4))
            {
                <div class="related-post-card">
                    <div class="post-image">
                        @if (!string.IsNullOrEmpty(post.AnhTieuDe))
                        {
                            <img src="@post.AnhTieuDe" alt="@post.TieuDe" class="post-thumb">
                        }
                        else
                        {
                            <div class="post-thumb-placeholder">
                                <i class="fas fa-image"></i>
                            </div>
                        }
                        <div class="post-category">
                            @post.ChuyenMuc?.Ten
                        </div>
                    </div>
                    
                    <div class="post-content">
                        <h6 class="post-title">
                            <a href="@Url.Action("ChiTietBaiViet", "Home", new { id = post.Id })">
                                @post.TieuDe
                            </a>
                        </h6>
                        
                        <p class="post-excerpt">
                            @(post.TomTat?.Length > 100 ? post.TomTat.Substring(0, 100) + "..." : post.TomTat)
                        </p>
                        
                        <div class="post-meta">
                            <span class="post-date">
                                <i class="fas fa-calendar me-1"></i>
                                @post.NgayDang.ToString("dd/MM/yyyy")
                            </span>
                            <span class="post-views">
                                <i class="fas fa-eye me-1"></i>
                                @post.LuotXem lượt xem
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

<style>
.related-posts-section {
    margin-top: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    border-radius: 20px;
    border: 1px solid #dee2e6;
}

.related-title {
    color: #2c3e50;
    font-weight: 700;
    margin-bottom: 2rem;
    padding-bottom: 0.75rem;
    border-bottom: 3px solid #4f46e5;
    display: flex;
    align-items: center;
    font-size: 1.3rem;
}

.related-posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
}

.related-post-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    border: 1px solid #e9ecef;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.related-post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.post-image {
    position: relative;
    height: 200px;
    overflow: hidden;
}

.post-thumb {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.related-post-card:hover .post-thumb {
    transform: scale(1.05);
}

.post-thumb-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
}

.post-category {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: rgba(79, 70, 229, 0.9);
    color: white;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(10px);
}

.post-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.post-title {
    margin-bottom: 0.75rem;
    line-height: 1.4;
}

.post-title a {
    color: #2c3e50;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: color 0.3s ease;
}

.post-title a:hover {
    color: #4f46e5;
    text-decoration: none;
}

.post-excerpt {
    color: #6c757d;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1rem;
    flex: 1;
}

.post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.85rem;
    color: #adb5bd;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid #f1f3f4;
}

.post-date,
.post-views {
    display: flex;
    align-items: center;
    font-weight: 500;
}

.post-date i,
.post-views i {
    color: #4f46e5;
}

/* Responsive */
@@media (max-width: 768px) {
    .related-posts-section {
        padding: 1.5rem;
        margin-top: 2rem;
    }
    
    .related-posts-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .post-content {
        padding: 1rem;
    }
    
    .post-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
}

@@media (max-width: 480px) {
    .related-posts-section {
        padding: 1rem;
    }
    
    .related-title {
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
    }
    
    .post-image {
        height: 150px;
    }
}
</style>
