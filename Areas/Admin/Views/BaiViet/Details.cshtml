@model WEB_CV.Models.BaiViet
@{
    ViewData["Title"] = "Xem bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var alt = string.IsNullOrWhiteSpace(Model.AnhTieuDeAlt) ? Model.TieuDe : Model.AnhTieuDeAlt;
}

<div class="card">
  <div class="card-body">
    <h3 class="mb-3">@Model.TieuDe</h3>

    <div class="text-muted mb-2">
      <i class="far fa-calendar"></i> @Model.NgayDang.ToString("dd/MM/yyyy HH:mm")
      @if (Model.ChuyenMuc != null) { <span class="ms-3"><i class="fas fa-folder"></i> @Model.ChuyenMuc.Ten</span> }
      @if (Model.TacGia != null)    { <span class="ms-3"><i class="fas fa-user"></i> @Model.TacGia.HoTen</span> }
    </div>

    <!-- Video -->
    @if (!string.IsNullOrEmpty(Model.VideoFile) || !string.IsNullOrEmpty(Model.VideoUrl))
    {
      <div class="article-video mb-4">
        @if (!string.IsNullOrEmpty(Model.VideoFile))
        {
          <div class="video-container">
            <video controls class="img-fluid rounded shadow-sm" style="width: 100%; max-height: 500px;">
              <source src="@Model.VideoFile" type="video/mp4">
              Trình duyệt không hỗ trợ video.
            </video>
            @if (!string.IsNullOrEmpty(Model.VideoAlt))
            {
              <p class="video-caption text-muted mt-2 small text-center">@Model.VideoAlt</p>
            }
          </div>
        }
        else if (!string.IsNullOrEmpty(Model.VideoUrl))
        {
          <div class="video-container">
            <div class="embed-responsive embed-responsive-16by9">
              @if (Model.VideoType == "youtube")
              {
                <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen></iframe>
              }
              else if (Model.VideoType == "vimeo")
              {
                <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen></iframe>
              }
              else
              {
                <iframe class="embed-responsive-item" src="@Model.VideoUrl" allowfullscreen></iframe>
              }
            </div>
            @if (!string.IsNullOrEmpty(Model.VideoAlt))
            {
              <p class="video-caption text-muted mt-2 small text-center">@Model.VideoAlt</p>
            }
          </div>
        }
      </div>
    }

    <div class="post-content">
      @Html.Raw(Model.NoiDung)   <!-- Admin xem trước -->
    </div>

    <div class="mt-3 d-flex gap-2">
      <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i>Sửa
      </a>
      <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
  </div>
</div>
