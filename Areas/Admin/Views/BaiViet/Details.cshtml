@model WEB_CV.Models.BaiViet
@{
    ViewData["Title"] = "Xem bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var alt = string.IsNullOrWhiteSpace(Model.AnhTieuDeAlt) ? Model.TieuDe : Model.AnhTieuDeAlt;
}

<div class="card">
  <div class="card-body">
    <h3 class="mb-3">@Model.TieuDe</h3>

    <div class="text-muted mb-2">
      <i class="far fa-calendar"></i> @Model.NgayDang.ToString("dd/MM/yyyy HH:mm")
      @if (Model.ChuyenMuc != null) { <span class="ms-3"><i class="fas fa-folder"></i> @Model.ChuyenMuc.Ten</span> }
      @if (Model.TacGia != null)    { <span class="ms-3"><i class="fas fa-user"></i> @Model.TacGia.HoTen</span> }
    </div>

    @if (!string.IsNullOrEmpty(Model.AnhTieuDe))
    {
      <img src="@Model.AnhTieuDe" alt="@alt" class="img-fluid mb-3" />
    }

    <div class="post-content">
      @Html.Raw(Model.NoiDung)   <!-- Admin xem trước -->
    </div>

    <div class="mt-3 d-flex gap-2">
      <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="fas fa-edit me-2"></i>Sửa
      </a>
      <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
  </div>
</div>
