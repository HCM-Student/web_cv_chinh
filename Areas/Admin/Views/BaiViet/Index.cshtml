@model IEnumerable<WEB_CV.Models.BaiViet>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Quản lý Bài viết";
    var q = ViewBag.Q as string;
}

<div class="admin-posts-page">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header Section -->
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-newspaper text-primary me-2"></i>
                    Quản lý Bài viết
                </h1>
                <p class="page-subtitle text-muted">Tạo, chỉnh sửa và quản lý nội dung website</p>
            </div>
            <div class="btn-group">
                <a class="btn btn-primary btn-lg" asp-area="Admin" asp-controller="BaiViet" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Thêm bài viết
                </a>
                <a class="btn btn-success btn-lg" asp-area="Admin" asp-controller="BaiViet" asp-action="CreateEvent">
                    <i class="fas fa-calendar-plus me-2"></i>Thêm sự kiện
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-primary">
                    <i class="fas fa-newspaper"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Count()</h3>
                    <p class="stat-label">Tổng bài viết</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-success">
                    <i class="fas fa-calendar-week"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Count(b => b.NgayDang >= DateTime.Today.AddDays(-7))</h3>
                    <p class="stat-label">Tuần này</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-warning">
                    <i class="fas fa-folder"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Select(b => b.ChuyenMuc?.Ten).Distinct().Count()</h3>
                    <p class="stat-label">Chuyên mục</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon bg-info">
                    <i class="fas fa-user-edit"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-number">@Model.Select(b => b.TacGia?.HoTen).Distinct().Count()</h3>
                    <p class="stat-label">Tác giả</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Tìm kiếm bài viết</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input class="form-control" name="q" value="@q" placeholder="Tìm theo tiêu đề, tóm tắt, chuyên mục, tác giả..." />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-primary w-100" type="submit">
                            <i class="fas fa-search me-2"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="form-label">&nbsp;</label>
                        <a class="btn btn-outline-secondary w-100" href="?">
                            <i class="fas fa-times me-2"></i>Xóa bộ lọc
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Posts Container -->
    <div class="posts-container">
        <div class="posts-header">
            <h3 class="posts-title">
                <div class="title-icon">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                        <!-- Document with lines -->
                        <rect x="4" y="2" width="14" height="20" rx="2" stroke="currentColor" stroke-width="1.5" fill="none"/>
                        <line x1="8" y1="6" x2="16" y2="6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        <line x1="8" y1="9" x2="16" y2="9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        <line x1="8" y1="12" x2="14" y2="12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        <line x1="8" y1="15" x2="12" y2="15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        <!-- Folded corner -->
                        <path d="M16 2L20 6L16 6V2Z" fill="currentColor" opacity="0.3"/>
                    </svg>
                </div>
                <div class="title-content">
                    <span class="title-text">Danh sách bài viết</span>
                    <span class="posts-count">@Model.Count() bài viết</span>
                </div>
            </h3>
            <div class="view-toggle">
                <div class="toggle-container">
                    <button class="toggle-btn active" data-view="grid" title="Xem dạng lưới">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                            <rect x="1" y="1" width="6" height="6" rx="1"/>
                            <rect x="9" y="1" width="6" height="6" rx="1"/>
                            <rect x="1" y="9" width="6" height="6" rx="1"/>
                            <rect x="9" y="9" width="6" height="6" rx="1"/>
                        </svg>
                    </button>
                    <button class="toggle-btn" data-view="table" title="Xem dạng bảng">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                            <rect x="1" y="2" width="14" height="2" rx="1"/>
                            <rect x="1" y="7" width="10" height="2" rx="1"/>
                            <rect x="1" y="12" width="8" height="2" rx="1"/>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Grid View -->
        <div class="posts-grid" id="gridView">
            @{ int index = 1; }
            @foreach (var item in Model)
            {
                <div class="post-item">
                    <div class="post-image-container">
                        @if (!string.IsNullOrEmpty(item.AnhTieuDe))
                        {
                            <img src="@item.AnhTieuDe" alt="@item.TieuDe" class="post-image">
                        }
                        else
                        {
                            <div class="post-image-placeholder">
                                <i class="fas fa-image"></i>
                            </div>
                        }
                        <div class="post-overlay">
                            <div class="post-actions">
                                <a asp-area="Admin" asp-controller="BaiViet" asp-action="Details" asp-route-id="@item.Id" class="action-btn view-btn" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="BaiViet" asp-action="Edit" asp-route-id="@item.Id" class="action-btn edit-btn" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="BaiViet" asp-action="SEOAnalysis" asp-route-id="@item.Id" class="action-btn seo-btn" title="Phân tích SEO">
                                    <i class="fas fa-search"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="BaiViet" asp-action="Delete" asp-route-id="@item.Id" class="action-btn delete-btn" title="Xóa">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                        <div class="post-category-badge">
                            @if (!string.IsNullOrEmpty(item.ChuyenMuc?.Ten))
                            {
                                <span class="category-tag">@item.ChuyenMuc.Ten</span>
                            }
                            else
                            {
                                <span class="category-tag default">Chưa phân loại</span>
                            }
                        </div>
                    </div>
                    
                    <div class="post-content">
                        <div class="post-header">
                            <span class="post-id">#@index</span>
                            <span class="post-date">@item.NgayDang.ToString("dd/MM/yyyy")</span>
                            <span class="post-status status-@item.TrangThai">
                                @(item.TrangThai switch
                                {
                                    0 => "Bản nháp",
                                    1 => "Đã đăng",
                                    2 => "Lên lịch",
                                    _ => "Không xác định"
                                })
                            </span>
                        </div>
                        
                        <h4 class="post-title">@item.TieuDe</h4>
                        
                        @if (!string.IsNullOrWhiteSpace(item.TomTat))
                        {
                            <p class="post-excerpt">@item.TomTat</p>
                        }
                        
                        <div class="post-footer">
                            <div class="post-author">
                                <div class="author-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <span class="author-name">@(item.TacGia?.HoTen ?? "Chưa có")</span>
                            </div>
                        </div>
                    </div>
                </div>
                index++;
            }
        </div>

        <!-- Table View -->
        <div class="posts-table" id="tableView" style="display: none;">
            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-1"></i>ID</th>
                            <th><i class="fas fa-image me-1"></i>Hình ảnh</th>
                            <th><i class="fas fa-newspaper me-1"></i>Tiêu đề</th>
                            <th><i class="fas fa-folder me-1"></i>Chuyên mục</th>
                            <th><i class="fas fa-user me-1"></i>Tác giả</th>
                            <th><i class="fas fa-calendar me-1"></i>Ngày đăng</th>
                            <th class="text-center"><i class="fas fa-cogs me-1"></i>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int tableIndex = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-primary">#@tableIndex</span>
                                </td>
                                <td>
                                    <div class="table-image">
                                        @if (!string.IsNullOrEmpty(item.AnhTieuDe))
                                        {
                                            <img src="@item.AnhTieuDe" alt="@item.TieuDe" class="img-fluid">
                                        }
                                        else
                                        {
                                            <div class="table-image-placeholder">
                                                <i class="fas fa-image"></i>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="table-title">
                                        <strong>@item.TieuDe</strong>
                                        @if (!string.IsNullOrWhiteSpace(item.TomTat))
                                        {
                                            <div class="table-summary">@item.TomTat</div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ChuyenMuc?.Ten))
                                    {
                                        <span class="badge bg-info">@item.ChuyenMuc.Ten</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Chưa phân loại</span>
                                    }
                                </td>
                                <td>
                                    <div class="table-author">
                                        <i class="fas fa-user-circle me-1"></i>
                                        @(item.TacGia?.HoTen ?? "Chưa có")
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted">@item.NgayDang.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-sm btn-outline-info" asp-area="Admin" asp-controller="BaiViet" asp-action="Details" asp-route-id="@item.Id" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="BaiViet" asp-action="Edit" asp-route-id="@item.Id" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-warning" asp-area="Admin" asp-controller="BaiViet" asp-action="SEOAnalysis" asp-route-id="@item.Id" title="Phân tích SEO">
                                            <i class="fas fa-search"></i>
                                        </a>
                                        <a class="btn btn-sm btn-outline-danger" asp-area="Admin" asp-controller="BaiViet" asp-action="Delete" asp-route-id="@item.Id" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            tableIndex++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
.admin-posts-page {
    padding: 2rem;
    background: linear-gradient(135deg, #4f46e5 0%, #06b6d4 100%);
    min-height: 100vh;
    position: relative;
}

.admin-posts-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
    opacity: 0.3;
    pointer-events: none;
}

.page-header {
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
}

.page-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
}

.page-subtitle {
    font-size: 1.2rem;
    margin: 0.5rem 0 0 0;
    color: rgba(255,255,255,0.9);
}

.stat-card {
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    transition: all 0.3s ease;
    border: 1px solid rgba(255,255,255,0.2);
}

.stat-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 16px 48px rgba(0,0,0,0.2);
}

.stat-icon {
    width: 70px;
    height: 70px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1.5rem;
    font-size: 1.8rem;
    color: white;
    position: relative;
    overflow: hidden;
}

.stat-icon::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255,255,255,0.2), transparent);
    border-radius: 20px;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    margin: 0;
    color: #2c3e50;
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.stat-label {
    font-size: 1rem;
    color: #6c757d;
    margin: 0;
    font-weight: 600;
}

.card {
    border: none;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    width: 100%;
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(10px);
}

/* Posts Container */
.posts-container {
    background: rgba(255,255,255,0.95);
    backdrop-filter: blur(20px);
    border-radius: 24px;
    padding: 2rem;
    box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    position: relative;
    z-index: 2;
}

.posts-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid rgba(79, 70, 229, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.posts-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.title-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(79, 70, 229, 0.3);
    transition: all 0.3s ease;
}

.title-icon span {
    font-size: 1.5rem;
    color: white;
    display: block;
}

.title-icon:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(79, 70, 229, 0.4);
}

.title-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.title-text {
    font-size: 1.8rem;
    font-weight: 700;
    color: #2c3e50;
    line-height: 1.2;
}

.posts-count {
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    color: white;
    padding: 0.4rem 0.8rem;
    border-radius: 15px;
    font-size: 0.85rem;
    font-weight: 600;
    box-shadow: 0 2px 8px rgba(79, 70, 229, 0.3);
    transition: all 0.3s ease;
    align-self: flex-start;
}

.posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
}

/* Post Item Styles */
.post-item {
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.08);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    border: 1px solid rgba(0,0,0,0.05);
}

.post-item:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 20px 60px rgba(0,0,0,0.15);
}

.post-image-container {
    position: relative;
    height: 220px;
    overflow: hidden;
}

.post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
}

.post-item:hover .post-image {
    transform: scale(1.1);
}

.post-image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3.5rem;
    color: #adb5bd;
    position: relative;
}

.post-image-placeholder::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
}

.post-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(0,0,0,0.7), rgba(0,0,0,0.3));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: all 0.3s ease;
}

.post-item:hover .post-overlay {
    opacity: 1;
}

.post-actions {
    display: flex;
    gap: 1rem;
}

.action-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255,255,255,0.3);
}

.view-btn {
    background: rgba(52, 152, 219, 0.9);
    color: white;
}

.edit-btn {
    background: rgba(46, 204, 113, 0.9);
    color: white;
}

.seo-btn {
    background: rgba(255, 193, 7, 0.9);
    color: white;
}

.delete-btn {
    background: rgba(231, 76, 60, 0.9);
    color: white;
}

.action-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 25px rgba(0,0,0,0.3);
    color: white;
}

.post-category-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    z-index: 3;
}

.category-tag {
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    border: 1px solid rgba(255,255,255,0.2);
}

.category-tag.default {
    background: linear-gradient(135deg, #95a5a6, #7f8c8d);
}

.post-content {
    padding: 2rem;
}

.post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.post-id {
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 600;
}

.post-date {
    color: #6c757d;
    font-size: 0.9rem;
    font-weight: 500;
}

.post-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 1rem;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.post-excerpt {
    font-size: 0.95rem;
    color: #6c757d;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.post-footer {
    border-top: 1px solid #f1f3f4;
    padding-top: 1rem;
}

.post-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.author-avatar {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, #4f46e5, #06b6d4);
    border-radius: 50%;
