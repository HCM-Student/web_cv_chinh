@model WEB_CV.Models.BaiViet
@{
    ViewData["Title"] = "Xoá bài viết";
}
<div class="container py-4">
    <h1 class="h4 mb-3 text-danger">Xoá bài viết</h1>

    <div class="alert alert-warning">
        Bạn có chắc muốn xoá bài: <strong>@Model.TieuDe</strong> ?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Chuyên mục</dt>
        <dd class="col-sm-10">@Model.ChuyenMuc?.Ten</dd>

        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.TacGia?.HoTen</dd>

        <dt class="col-sm-2">Ngày đăng</dt>
        <dd class="col-sm-10">@Model.NgayDang</dd>
    </dl>

    <form asp-area="Admin" asp-controller="BaiViet" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a asp-area="Admin" asp-controller="BaiViet" asp-action="Index" class="btn btn-secondary ms-2">Huỷ</a>
    </form>
</div>
