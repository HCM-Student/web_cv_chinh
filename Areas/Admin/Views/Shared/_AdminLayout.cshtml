                        <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <span class="nav-icon">
                                <i class="fas fa-home"></i>
                            </span>
                            <span class="nav-text">Dashboard</span>
                            <span class="nav-badge badge bg-primary">New</span>
                        </a>
                    </li>
                    }
                    
                    @* Bài viết - Admin và TruongPhongPhatTrien *@
                    @if (User.IsInRole("Admin") || User.IsInRole("TruongPhongPhatTrien"))
                    {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="BaiViet" asp-action="Index">
                            <span class="nav-icon">
                                <i class="fas fa-file-alt"></i>
                            </span>
                            <span class="nav-text">Bài viết</span>
                        </a>
                    </li>
                    }
                    
                    @* Media - Admin, TruongPhongPhatTrien và TruongPhongDuLieu *@
                    @if (User.IsInRole("Admin") || User.IsInRole("TruongPhongPhatTrien") || User.IsInRole("TruongPhongDuLieu"))
                    {
