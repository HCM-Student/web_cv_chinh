@model IEnumerable<WEB_CV.Models.BaiViet>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var q = ViewBag.Q as string;
}

<div class="admin-posts-page">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="page-header mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="page-title">
                <i class="fas fa-calendar-week text-success me-2"></i>
                Quản lý Sự kiện
            </h1>
            <p class="text-muted">Tạo, chỉnh sửa và quản lý các sự kiện</p>
        </div>
        <div>
            <a class="btn btn-success btn-lg" asp-area="Admin" asp-controller="SuKien" asp-action="Create">
                <i class="fas fa-calendar-plus me-2"></i>Thêm sự kiện
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Tìm kiếm</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input class="form-control" name="q" value="@q" placeholder="Tìm theo tiêu đề hoặc tóm tắt..." />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" type="submit">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <a class="btn btn-outline-secondary w-100" href="?">
                        <i class="fas fa-times me-2"></i>Xóa bộ lọc
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Danh sách sự kiện</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Tiêu đề</th>
                            <th>Tác giả</th>
                            <th>Ngày đăng</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.TieuDe</td>
                            <td>@(item.TacGia?.HoTen ?? "-")</td>
                            <td>@item.NgayDang.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-primary" asp-area="Admin" asp-controller="SuKien" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-sm btn-outline-danger" asp-area="Admin" asp-controller="SuKien" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


