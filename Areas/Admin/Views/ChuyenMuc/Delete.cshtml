@model WEB_CV.Models.ChuyenMuc
@{
    ViewData["Title"] = "Xoá chuyên mục";
}
<div class="container py-4">
    <h1 class="h4 mb-3 text-danger">Xoá chuyên mục</h1>
    <div class="alert alert-warning">Bạn chắc chắn muốn xoá <strong>@Model.Ten</strong>?</div>

    <form asp-area="Admin" asp-controller="ChuyenMuc" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a asp-area="Admin" asp-controller="ChuyenMuc" asp-action="Index" class="btn btn-secondary ms-2">Huỷ</a>
    </form>
</div>
