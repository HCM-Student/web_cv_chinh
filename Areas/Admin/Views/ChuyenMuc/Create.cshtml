@model WEB_CV.Models.ChuyenMuc
@{
    ViewData["Title"] = "Thêm chuyên mục";
}
<div class="container py-4">
    <h1 class="h4 mb-3">Thêm chuyên mục</h1>
    <form asp-area="Admin" asp-controller="ChuyenMuc" asp-action="Create" method="post">
        <partial name="_Form" model="Model" />
        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-area="Admin" asp-controller="ChuyenMuc" asp-action="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
