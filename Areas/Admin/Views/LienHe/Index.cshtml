@model IEnumerable<WEB_CV.Models.LienHe>
@{
    ViewData["Title"] = " Quản lý Liên hệ";
}

<h1>Danh sách Liên hệ</h1>
<p>Dưới đây là danh sách các tin nhắn được gửi từ form liên hệ.</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Số Điện Thoại</th>
            <th>Ngày Gửi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.HoTen)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>
                <td>@item.NgayGui.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Xem</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>