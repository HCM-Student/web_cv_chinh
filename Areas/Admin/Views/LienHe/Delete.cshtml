@model WEB_CV.Models.LienHe
@{
    ViewData["Title"] = "Xóa Liên hệ";
}

<h1>Xóa Liên hệ</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa liên hệ này?</h3>

<div>
    <h4>Thông tin liên hệ</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Họ Tên</dt>
        <dd class = "col-sm-10">@Model.HoTen</dd>
        <dt class = "col-sm-2">Email</dt>
        <dd class = "col-sm-10">@Model.Email</dd>
        <dt class = "col-sm-2">Ngày Gửi</dt>
        <dd class = "col-sm-10">@Model.NgayGui</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>