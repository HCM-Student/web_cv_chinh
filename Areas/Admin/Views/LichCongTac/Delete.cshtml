@model WEB_CV.Models.WorkScheduleEvent

@{
    ViewData["Title"] = "Xóa sự kiện lịch công tác";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash text-danger"></i> Xóa sự kiện lịch công tác</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa sự kiện này không? Hành động này không thể hoàn tác.
</div>

<div class="card">
    <div class="card-body">
        <h5 class="text-primary mb-3">Thông tin sự kiện sẽ bị xóa:</h5>
        
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Ngày diễn ra:</strong></td>
                        <td>@Model.Date.ToString("dd/MM/yyyy") (@GetDayOfWeek(Model.Date.DayOfWeek))</td>
                    </tr>
                    <tr>
                        <td><strong>Thời gian:</strong></td>
                        <td>
                            @if (Model.StartTime.HasValue)
                            {
                                <span class="badge bg-primary">@Model.StartTime.Value.ToString(@"hh\:mm")</span>
                                @if (Model.EndTime.HasValue)
                                {
                                    <span class="text-muted">-</span>
                                    <span class="badge bg-secondary">@Model.EndTime.Value.ToString(@"hh\:mm")</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không xác định</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Nội dung:</strong></td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td><strong>Địa điểm:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Location) ? "Không xác định" : Model.Location)</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Tổ chức:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Organization) ? "Không xác định" : Model.Organization)</td>
                    </tr>
                    <tr>
                        <td><strong>Người liên hệ:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Contact) ? "Không xác định" : Model.Contact)</td>
                    </tr>
                    <tr>
                        <td><strong>Số điện thoại:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Phone) ? "Không có" : Model.Phone)</td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Email) ? "Không có" : Model.Email)</td>
                    </tr>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Participants))
        {
            <div class="mt-3">
                <strong>Thành phần tham gia:</strong>
                <p class="text-muted">@Model.Participants</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Preparation))
        {
            <div class="mt-3">
                <strong>Thành phần chuẩn bị:</strong>
                <p class="text-muted">@Model.Preparation</p>
            </div>
        }

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</div>

@functions {
    string GetDayOfWeek(DayOfWeek dayOfWeek)
    {
        return dayOfWeek switch
        {
            DayOfWeek.Monday => "Thứ 2",
            DayOfWeek.Tuesday => "Thứ 3",
            DayOfWeek.Wednesday => "Thứ 4",
            DayOfWeek.Thursday => "Thứ 5",
            DayOfWeek.Friday => "Thứ 6",
            DayOfWeek.Saturday => "Thứ 7",
            DayOfWeek.Sunday => "Chủ nhật",
            _ => ""
        };
    }
}
