@model WEB_CV.Models.WorkScheduleEvent

@{
    ViewData["Title"] = "Chi tiết sự kiện lịch công tác";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-calendar-check"></i> Chi tiết sự kiện lịch công tác</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5 class="text-primary">Thông tin cơ bản</h5>
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Ngày diễn ra:</strong></td>
                        <td>@Model.Date.ToString("dd/MM/yyyy") (@GetDayOfWeek(Model.Date.DayOfWeek))</td>
                    </tr>
                    <tr>
                        <td><strong>Thời gian:</strong></td>
                        <td>
                            @if (Model.StartTime.HasValue)
                            {
                                <span class="badge bg-primary">@Model.StartTime.Value.ToString(@"hh\:mm")</span>
                                @if (Model.EndTime.HasValue)
                                {
                                    <span class="text-muted">-</span>
                                    <span class="badge bg-secondary">@Model.EndTime.Value.ToString(@"hh\:mm")</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Không xác định</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Nội dung:</strong></td>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <td><strong>Địa điểm:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Location) ? "Không xác định" : Model.Location)</td>
                    </tr>
                    <tr>
                        <td><strong>Tổ chức:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Organization) ? "Không xác định" : Model.Organization)</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <h5 class="text-primary">Thông tin liên hệ</h5>
                <table class="table table-borderless">
                    <tr>
                        <td><strong>Người liên hệ:</strong></td>
                        <td>@(string.IsNullOrEmpty(Model.Contact) ? "Không xác định" : Model.Contact)</td>
                    </tr>
                    <tr>
                        <td><strong>Số điện thoại:</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <a href="tel:@Model.Phone" class="text-decoration-none">
                                    <i class="fas fa-phone"></i> @Model.Phone
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <a href="mailto:@Model.Email" class="text-decoration-none">
                                    <i class="fas fa-envelope"></i> @Model.Email
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Không có</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Participants))
        {
            <div class="mt-4">
                <h5 class="text-primary">Thành phần tham gia</h5>
                <p class="text-muted">@Model.Participants</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Preparation))
        {
            <div class="mt-4">
                <h5 class="text-primary">Thành phần chuẩn bị</h5>
                <p class="text-muted">@Model.Preparation</p>
            </div>
        }

        <div class="mt-4 d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Chỉnh sửa
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                <i class="fas fa-trash"></i> Xóa
            </a>
        </div>
    </div>
</div>

@functions {
    string GetDayOfWeek(DayOfWeek dayOfWeek)
    {
        return dayOfWeek switch
        {
            DayOfWeek.Monday => "Thứ 2",
            DayOfWeek.Tuesday => "Thứ 3",
            DayOfWeek.Wednesday => "Thứ 4",
            DayOfWeek.Thursday => "Thứ 5",
            DayOfWeek.Friday => "Thứ 6",
            DayOfWeek.Saturday => "Thứ 7",
            DayOfWeek.Sunday => "Chủ nhật",
            _ => ""
        };
    }
}
