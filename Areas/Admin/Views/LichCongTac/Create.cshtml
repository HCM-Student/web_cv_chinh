@model WEB_CV.Models.WorkScheduleEvent
<div class="container-xxl py-3">
  <h4 class="mb-3">Thêm lịch (đơn vị)</h4>
  
  @if (!ViewData.ModelState.IsValid)
  {
      <div class="alert alert-danger">
          <ul class="mb-0">
              @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
              {
                  <li>@error.ErrorMessage</li>
              }
          </ul>
      </div>
  }
  
  <form asp-action="Create" method="post" class="card card-body shadow-sm border-0">
    <input type="hidden" asp-for="Scope" value="DonVi" />
    <div class="row g-3">
      <div class="col-sm-4">
        <label class="form-label">Ngày *</label>
        <input type="date" class="form-control" asp-for="Date" />
        <span asp-validation-for="Date" class="text-danger"></span>
      </div>
      <div class="col-sm-2">
        <label class="form-label">Bắt đầu</label>
        <input type="time" class="form-control" asp-for="StartTime" />
      </div>
      <div class="col-sm-2">
        <label class="form-label">Kết thúc</label>
        <input type="time" class="form-control" asp-for="EndTime" />
      </div>
      <div class="col-sm-4">
        <label class="form-label">Lãnh đạo</label>
        <input class="form-control" asp-for="Leader" placeholder="Tên lãnh đạo" />
      </div>
      <div class="col-sm-12">
        <label class="form-label">Nội dung công việc *</label>
        <input class="form-control" asp-for="Title" placeholder="Nhập nội dung công việc" />
        <span asp-validation-for="Title" class="text-danger"></span>
      </div>
      <div class="col-sm-4">
        <label class="form-label">Thành phần</label>
        <input class="form-control" asp-for="Participants" placeholder="Thành phần tham gia" />
      </div>
      <div class="col-sm-4">
        <label class="form-label">Chuẩn bị</label>
        <input class="form-control" asp-for="Preparation" placeholder="Thành phần chuẩn bị" />
      </div>
      <div class="col-sm-4">
        <label class="form-label">Đơn vị/Tổ chức</label>
        <input class="form-control" asp-for="Organization" placeholder="Tên đơn vị/tổ chức" />
      </div>
      <div class="col-sm-6">
        <label class="form-label">Địa điểm</label>
        <input class="form-control" asp-for="Location" placeholder="Địa điểm tổ chức" />
      </div>
      <div class="col-sm-6">
        <label class="form-label">Liên hệ</label>
        <input class="form-control" asp-for="Contact" placeholder="Người liên hệ" />
      </div>
      <div class="col-sm-6">
        <label class="form-label">Số điện thoại</label>
        <input class="form-control" asp-for="Phone" placeholder="Số điện thoại" />
      </div>
      <div class="col-sm-6">
        <label class="form-label">Email</label>
        <input class="form-control" type="email" asp-for="Email" placeholder="Email liên hệ" />
      </div>
      <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a class="btn btn-light" href="@Url.Action("Index")">Hủy</a>
      </div>
    </div>
  </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
