@model WEB_CV.Models.WorkScheduleEvent

@{
    ViewData["Title"] = "Chỉnh sửa sự kiện lịch công tác";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-edit"></i> Chỉnh sửa sự kiện lịch công tác</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Date" class="form-label">Ngày diễn ra *</label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="StartTime" class="form-label">Giờ bắt đầu</label>
                        <input asp-for="StartTime" class="form-control" type="time" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="mb-3">
                        <label asp-for="EndTime" class="form-label">Giờ kết thúc</label>
                        <input asp-for="EndTime" class="form-control" type="time" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Nội dung *</label>
                <input asp-for="Title" class="form-control" placeholder="Nhập nội dung sự kiện" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Location" class="form-label">Địa điểm</label>
                        <input asp-for="Location" class="form-control" placeholder="Nhập địa điểm" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Organization" class="form-label">Tên tổ chức</label>
                        <input asp-for="Organization" class="form-control" placeholder="Nhập tên tổ chức" />
                        <span asp-validation-for="Organization" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Participants" class="form-label">Thành phần tham gia</label>
                        <textarea asp-for="Participants" class="form-control" rows="3" placeholder="Nhập thành phần tham gia"></textarea>
                        <span asp-validation-for="Participants" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Preparation" class="form-label">Thành phần chuẩn bị</label>
                        <textarea asp-for="Preparation" class="form-control" rows="3" placeholder="Nhập thành phần chuẩn bị"></textarea>
                        <span asp-validation-for="Preparation" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Contact" class="form-label">Người liên hệ</label>
                        <input asp-for="Contact" class="form-control" placeholder="Nhập tên người liên hệ" />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Nhập email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
