@using WEB_CV.Data
@inject NewsDbContext Context

@{
    ViewData["Title"] = "Dashboard";
    var totalBaiViet = Context.BaiViets.Count();
    var totalChuyenMuc = Context.ChuyenMucs.Count();
    var totalNguoiDung = Context.NguoiDungs.Count();
    var baiVietMoi = Context.BaiViets.Where(b => b.NgayDang >= DateTime.Today.AddDays(-7)).Count();
}

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-header-content">
            <div class="page-title-section">
                <h1 class="page-title">Dashboard Overview</h1>
                <p class="page-subtitle">Chào mừng trở lại! Đây là tổng quan hệ thống của bạn</p>
            </div>
            <div class="page-actions">
                <button class="btn btn-outline-secondary me-2">
                    <i class="fas fa-download me-2"></i>Export
                </button>
                <button class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Tạo bài viết
                </button>
            </div>
        </div>
        <div class="page-breadcrumb">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </nav>
            <div class="page-time">
                <i class="far fa-clock me-2"></i>
                <span id="current-time">@DateTime.Now.ToString("dd MMM yyyy, HH:mm")</span>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-xl-3 col-lg-6">
            <div class="stats-card primary-card">
                <div class="stats-card-content">
                    <div class="stats-info">
                        <span class="stats-label">Tổng bài viết</span>
                        <h2 class="stats-value">@totalBaiViet</h2>
                        <div class="stats-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+@baiVietMoi tuần này</span>
                        </div>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                </div>
                <div class="stats-footer">
                    <a href="#" class="stats-link">
                        Xem chi tiết <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-lg-6">
            <div class="stats-card success-card">
                <div class="stats-card-content">
                    <div class="stats-info">
                        <span class="stats-label">Chuyên mục</span>
                        <h2 class="stats-value">@totalChuyenMuc</h2>
                        <div class="stats-change positive">
                            <i class="fas fa-check-circle"></i>
                            <span>Hoạt động tốt</span>
                        </div>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-folder-open"></i>
                    </div>
                </div>
                <div class="stats-footer">
                    <a href="#" class="stats-link">
                        Quản lý <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-lg-6">
            <div class="stats-card secondary-card">
                <div class="stats-card-content">
                    <div class="stats-info">
                        <span class="stats-label">Người dùng</span>
                        <h2 class="stats-value">@totalNguoiDung</h2>
                        <div class="stats-change positive">
                            <i class="fas fa-user-check"></i>
                            <span>@Context.NguoiDungs.Count(u => u.KichHoat) active</span>
                        </div>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="stats-footer">
                    <a href="#" class="stats-link">
                        Xem tất cả <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-xl-3 col-lg-6">
            <div class="stats-card primary-light-card">
                <div class="stats-card-content">
                    <div class="stats-info">
                        <span class="stats-label">Lượt xem</span>
                        <h2 class="stats-value">@((totalBaiViet * 150) + new Random().Next(50, 200))</h2>
                        <div class="stats-change positive">
                            <i class="fas fa-chart-line"></i>
                            <span>+15% tháng này</span>
                        </div>
                    </div>
                    <div class="stats-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                </div>
                <div class="stats-footer">
                    <a href="#" class="stats-link">
                        Analytics <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="quick-actions-section">
                <h5 class="section-title mb-3">
                    <i class="fas fa-magic me-2"></i>
                    Thao tác nhanh
                </h5>
                <div class="row g-3">
                    <div class="col-lg-3 col-md-6">
                        <a class="quick-action-card" asp-area="Admin" asp-controller="BaiViet" asp-action="Create">
                            <div class="quick-action-icon primary-bg">
                                <i class="fas fa-pen"></i>
                            </div>
                            <div class="quick-action-text">
                                <span class="action-title">Viết bài mới</span>
                                <span class="action-desc">Tạo nội dung</span>
                            </div>
                            <i class="fas fa-chevron-right arrow-icon"></i>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <a class="quick-action-card" asp-area="Admin" asp-controller="ChuyenMuc" asp-action="Create">
                            <div class="quick-action-icon success-bg">
                                <i class="fas fa-folder-plus"></i>
                            </div>
                            <div class="quick-action-text">
                                <span class="action-title">Thêm chuyên mục</span>
                                <span class="action-desc">Tạo danh mục</span>
                            </div>
                            <i class="fas fa-chevron-right arrow-icon"></i>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <a class="quick-action-card" href="#">
                            <div class="quick-action-icon secondary-bg">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="quick-action-text">
                                <span class="action-title">Thêm người dùng</span>
                                <span class="action-desc">Quản lý user</span>
                            </div>
                            <i class="fas fa-chevron-right arrow-icon"></i>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <a class="quick-action-card" href="#">
                            <div class="quick-action-icon primary-light-bg">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div class="quick-action-text">
                                <span class="action-title">Xem báo cáo</span>
                                <span class="action-desc">Thống kê</span>
                            </div>
                            <i class="fas fa-chevron-right arrow-icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="row g-4">
        <!-- Recent Activity -->
        <div class="col-lg-8">
            <div class="content-card">
                <div class="content-card-header">
                    <h5 class="card-title">
                        <i class="fas fa-history me-2"></i>
                        Hoạt động gần đây
                    </h5>
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-filter"></i>
                    </button>
                </div>
                <div class="content-card-body">
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon bg-primary">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text">
                                    <strong>Admin</strong> đã tạo bài viết mới
                                    <span class="text-primary">"Giới thiệu công nghệ AI"</span>
                                </p>
                                <span class="activity-time">2 phút trước</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-success">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text">
                                    <strong>User123</strong> đã đăng ký tài khoản mới
                                </p>
                                <span class="activity-time">15 phút trước</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-warning">
                                <i class="fas fa-edit"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text">
                                    <strong>Editor</strong> đã cập nhật chuyên mục
                                    <span class="text-warning">"Công nghệ"</span>
                                </p>
                                <span class="activity-time">1 giờ trước</span>
                            </div>
                        </div>
                        <div class="activity-item">
                            <div class="activity-icon bg-danger">
                                <i class="fas fa-trash"></i>
                            </div>
                            <div class="activity-content">
                                <p class="activity-text">
                                    <strong>Admin</strong> đã xóa 3 bài viết cũ
                                </p>
                                <span class="activity-time">2 giờ trước</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Top Categories -->
        <div class="col-lg-4">
            <div class="content-card">
                <div class="content-card-header">
                    <h5 class="card-title">
                        <i class="fas fa-star me-2"></i>
                        Top chuyên mục
                    </h5>
                </div>
                <div class="content-card-body">
                    <div class="category-list">
                        <div class="category-item">
                            <div class="category-info">
                                <span class="category-name">Công nghệ</span>
                                <span class="category-count">45 bài</span>
                            </div>
                            <div class="category-bar">
                                <div class="bar-fill" style="width: 85%;"></div>
                            </div>
                        </div>
                        <div class="category-item">
                            <div class="category-info">
                                <span class="category-name">Giải pháp</span>
                                <span class="category-count">32 bài</span>
                            </div>
                            <div class="category-bar">
                                <div class="bar-fill" style="width: 65%;"></div>
                            </div>
                        </div>
                        <div class="category-item">
                            <div class="category-info">
                                <span class="category-name">Tin tức</span>
                                <span class="category-count">28 bài</span>
                            </div>
                            <div class="category-bar">
                                <div class="bar-fill" style="width: 55%;"></div>
                            </div>
                        </div>
                        <div class="category-item">
                            <div class="category-info">
                                <span class="category-name">Tuyển dụng</span>
                                <span class="category-count">15 bài</span>
                            </div>
                            <div class="category-bar">
                                <div class="bar-fill" style="width: 30%;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Update current time
function updateTime() {
    const now = new Date();
    const options = { 
        day: '2-digit', 
        month: 'short', 
        year: 'numeric', 
        hour: '2-digit', 
        minute: '2-digit' 
    };
    const timeString = now.toLocaleDateString('vi-VN', options);
    const timeElement = document.getElementById('current-time');
    if (timeElement) {
        timeElement.textContent = timeString;
    }
}

// Update time every minute
setInterval(updateTime, 60000);
updateTime();
</script>