@model IEnumerable<WEB_CV.Models.BinhLuan>

@{
    ViewData["Title"] = "Quản lý bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-comments"></i> Quản lý bình luận</h2>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary" onclick="selectAll()">
                        <i class="fas fa-check-square"></i> Chọn tất cả
                    </button>
                    <button type="button" class="btn btn-outline-success" onclick="bulkApprove()">
                        <i class="fas fa-check"></i> Duyệt hàng loạt
                    </button>
                    <button type="button" class="btn btn-outline-danger" onclick="bulkReject()">
                        <i class="fas fa-times"></i> Từ chối hàng loạt
                    </button>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Bộ lọc -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Trạng thái:</label>
                            <select name="trangThai" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="0" selected="@(ViewBag.TrangThai == 0)">Chờ duyệt</option>
                                <option value="1" selected="@(ViewBag.TrangThai == 1)">Đã duyệt</option>
                                <option value="2" selected="@(ViewBag.TrangThai == 2)">Từ chối</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-comment-slash fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Không có bình luận nào</h4>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th width="50">
                                            <input type="checkbox" id="selectAllCheckbox" onchange="toggleSelectAll()">
                                        </th>
                                        <th>Nội dung</th>
                                        <th>Người gửi</th>
                                        <th>Bài viết</th>
                                        <th>Ngày gửi</th>
                                        <th>Trạng thái</th>
                                        <th width="200">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" class="comment-checkbox" value="@comment.Id">
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 300px;" title="@comment.NoiDung">
                                                    @comment.NoiDung
                                                </div>
                                            </td>
                                            <td>
                                                @if (comment.NguoiDung != null)
                                                {
                                                    <div>
                                                        <strong>@comment.NguoiDung.HoTen</strong><br>
                                                        <small class="text-muted">@comment.NguoiDung.Email</small>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div>
                                                        <strong>@comment.HoTen</strong><br>
                                                        <small class="text-muted">@comment.Email</small>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("ChiTietBaiViet", "Home", new { id = comment.BaiVietId })" 
                                                   class="text-decoration-none" target="_blank">
                                                    @comment.BaiViet.TieuDe
                                                </a>
                                            </td>
                                            <td>@comment.Ngay.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @switch (comment.TrangThai)
                                                {
                                                    case 0:
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-clock"></i> Chờ duyệt
                                                        </span>
                                                        break;
                                                    case 1:
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check"></i> Đã duyệt
                                                        </span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-danger">
                                                            <i class="fas fa-times"></i> Từ chối
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Details", new { id = comment.Id })" 
                                                       class="btn btn-outline-info" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (comment.TrangThai == 0)
                                                    {
                                                        <form method="post" action="@Url.Action("Approve", new { id = comment.Id })" 
                                                              style="display: inline;" onsubmit="return confirm('Duyệt bình luận này?')">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-outline-success" title="Duyệt">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                        <form method="post" action="@Url.Action("Reject", new { id = comment.Id })" 
                                                              style="display: inline;" onsubmit="return confirm('Từ chối bình luận này?')">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-outline-warning" title="Từ chối">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    <form method="post" action="@Url.Action("Delete", new { id = comment.Id })" 
                                                          style="display: inline;" onsubmit="return confirm('Xóa bình luận này?')">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-danger" title="Xóa">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Form ẩn cho bulk actions -->
<form id="bulkApproveForm" method="post" action="@Url.Action("BulkApprove")" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="commentIds" id="bulkApproveIds">
</form>

<form id="bulkRejectForm" method="post" action="@Url.Action("BulkReject")" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="commentIds" id="bulkRejectIds">
</form>

@section Scripts {
    <script>
        function toggleSelectAll() {
            const selectAll = document.getElementById('selectAllCheckbox');
            const checkboxes = document.querySelectorAll('.comment-checkbox');
            checkboxes.forEach(cb => cb.checked = selectAll.checked);
        }

        function selectAll() {
            const checkboxes = document.querySelectorAll('.comment-checkbox');
            checkboxes.forEach(cb => cb.checked = true);
            document.getElementById('selectAllCheckbox').checked = true;
        }

        function bulkApprove() {
            const selectedIds = getSelectedIds();
            if (selectedIds.length === 0) {
                alert('Vui lòng chọn ít nhất một bình luận!');
                return;
            }
            if (confirm(`Duyệt ${selectedIds.length} bình luận đã chọn?`)) {
                document.getElementById('bulkApproveIds').value = selectedIds.join(',');
                document.getElementById('bulkApproveForm').submit();
            }
        }

        function bulkReject() {
            const selectedIds = getSelectedIds();
            if (selectedIds.length === 0) {
                alert('Vui lòng chọn ít nhất một bình luận!');
                return;
            }
            if (confirm(`Từ chối ${selectedIds.length} bình luận đã chọn?`)) {
                document.getElementById('bulkRejectIds').value = selectedIds.join(',');
                document.getElementById('bulkRejectForm').submit();
            }
        }

        function getSelectedIds() {
            const checkboxes = document.querySelectorAll('.comment-checkbox:checked');
            return Array.from(checkboxes).map(cb => cb.value);
        }
    </script>
}
