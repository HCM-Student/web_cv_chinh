@model IEnumerable<WEB_CV.Models.Message>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var other = ViewBag.OtherUser as WEB_CV.Models.NguoiDung;
    ViewData["Title"] = $"Chat với {(other?.HoTen ?? ("#" + other?.Id))}";
}

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><i class="fas fa-comments me-2"></i>@(other?.HoTen ?? ("Người dùng #" + other?.Id))</h5>
  </div>
  <div class="card-body" style="max-height: 60vh; overflow-y: auto;">
    @{
        var currentUserId = (int)(ViewBag.CurrentUserId ?? 0);
    }
    @foreach (var m in Model)
    {
        var isMine = m.FromUserId == currentUserId;
        <div class="message @(isMine ? "sent" : "received")">
            <div class="message-bubble">
                <div><strong>@(isMine ? "Bạn" : "Người dùng"):</strong> @m.Content</div>
                <div class="message-time">@m.SentAtUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</div>
            </div>
        </div>
    }
  </div>
  <div class="card-footer">
    <form asp-area="Admin" asp-controller="TinNhan" asp-action="Send" method="post" class="d-flex gap-2">
      @Html.AntiForgeryToken()
      <input type="hidden" name="toUserId" value="@other?.Id" />
      <input name="content" class="form-control" placeholder="Nhập tin nhắn..." />
      <button class="btn btn-primary" type="submit"><i class="fas fa-paper-plane me-1"></i>Gửi</button>
    </form>
  </div>
</div>


