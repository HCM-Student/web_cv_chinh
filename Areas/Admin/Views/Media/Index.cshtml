  transition: all 0.2s ease;
  cursor: pointer;
  text-decoration: none;
}

.btn-primary-modern {
  background: linear-gradient(135deg, var(--brand), #0052d4);
  color: white;
  box-shadow: 0 4px 14px rgba(0, 97, 255, 0.3);
}

.btn-primary-modern:hover {
  transform: translateY(-2px);
