  const fullUrl = location.origin + url;
  navigator.clipboard.writeText(fullUrl).then(()=> {
    showNotification(`<i class="fas fa-check me-2"></i>ƒê√£ sao ch√©p ƒë∆∞·ªùng d·∫´n: <code>${fullUrl}</code>`, 'success');
