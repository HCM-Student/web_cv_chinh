function formatSize(bytes){
  if(!bytes && bytes!==0) return '';
  const k = 1024, i = Math.floor(Math.log(Math.max(bytes,1))/Math.log(k));
  return `${(bytes/Math.pow(k,i)).toFixed(2)} ${['B','KB','MB','GB','TB'][i]}`;
}

